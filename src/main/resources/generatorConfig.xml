<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
 PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
 "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<properties url="file:///Users/r-ogata/Documents/workspace-sts/gruul-server/src/main/resources/generate.properties" />

	<classPathEntry location="${postgres.driver.jar}" />
	<classPathEntry location="target/classes" />

	<context id="PostgresTables" targetRuntime="MyBatis3">

		<jdbcConnection driverClass="${jdbc.driver}"
			connectionURL="${jdbc.url}" userId="${jdbc.username}" password="${jdbc.password}">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<javaModelGenerator targetPackage="jp.fores.gruul.db.entity"
			targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
			<property name="immutable" value="true" />
		</javaModelGenerator>
		<sqlMapGenerator targetPackage="jp.fores.gruul.db.map"
			targetProject="src/main/resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>
		<javaClientGenerator type="ANNOTATEDMAPPER"
			targetPackage="jp.fores.gruul.db.map" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<table tableName="i_user">
			<property name="useActualColumnNames" value="false" />
		</table>
		<table tableName="i_group">
			<property name="useActualColumnNames" value="false" />
		</table>
		<table tableName="i_user_group">
			<property name="useActualColumnNames" value="false" />
		</table>

	</context>
</generatorConfiguration>